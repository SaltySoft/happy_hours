<!DOCTYPE html>
<html lang="fr">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <title>Happy Hours</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    
    <link href="@Url.Content("~/Content/css/reset.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/css/pure.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/css/default.css")" rel="stylesheet" type="text/css" />
    @RenderSection("Styles", false)
</head>
<body>
    <header>
        <div class="logo-container">
            <a href="#">
                <img id="img-logo" src="~/Images/logo-happyhour2.jpg" />
            </a>
        </div>
        <div class="header-buttons-container">
            <div class="login-menu-container">
                <div class="pure-menu pure-menu-open pure-menu-horizontal">
                    <ul>
                        <li>
                            <input placeholder="login" /></li>
                        <li>
                            <input placeholder="password" /></li>
                        <li><a href="#">Login</a></li>
                    </ul>
                </div>
            </div>
            <div class=".separator-clearer"></div>
            <div class="navigation-menu-container">
                <div class="pure-menu pure-menu-open pure-menu-horizontal">
                    <ul>
                        <li class="pure-menu-selected"><a href="#">Les cocktails</a></li>
                        <li><a href="#">Recherche par ingrédients</a></li>
                        <li><a href="#">Ajouter une recette</a></li>
                        <li><a href="#">Favoris</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </header>
    <div id="body">
        @RenderSection("featured", required: false)
        <section class="content-wrapper main-content clear-fix">
            @RenderBody()
        </section>
    </div>
    <footer>
        <div class="content-wrapper">
            <div class="float-left">
                <p>Application Happy Hours - &copy; EPITA @DateTime.Now.Year</p>
            </div>
        </div>
    </footer>
</body>
</html>
